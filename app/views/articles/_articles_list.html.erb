<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Update Count</th>
      <th>Tags</th>
      <th>User</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.status.capitalize %></td>
        <td><%= article.update_count %></td>
        <td>
          <% article.tags.each do | tag| %>
            <span><%= tag.name %></span>
          <% end %>
        </td>
        <td><%= article.user.username %></td>
        <td><%= link_to 'Details', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Delete', article, data: { turbo_method: :delete, turbo_confirm: 'Delete article?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>