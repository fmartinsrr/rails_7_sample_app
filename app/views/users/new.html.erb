<h1>New User</h1>

<%= form_with scope: :user, url: users_path, local: true do |user_form| %>
    <div class="field">
        <%= user_form.label :username %>
        <%= user_form.text_field :username %>
    </div>

    <div class="actions">
        <%= user_form.submit %>
    </div>
<% end %>

<br>

<%= link_to 'Back', users_path %>